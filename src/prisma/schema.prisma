generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"
}

model Booking {
  id            Int           @id @default(autoincrement())
  userId        Int
  hotelid       Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  bookingAmount Int
  status        BookingStatus
}


enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
